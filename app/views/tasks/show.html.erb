<h1><%= @task.title %></h1>
<p><%= @task.details %></p>

<p>
  <% if @task.completed %>
    <strong>This task is completed</strong>
  <% else %>
    <strong>This task is not completed</strong>
  <% end %>
</p>

<%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-primary" %>
<%= link_to "Back to list", tasks_path, class: "btn btn-link" %>
